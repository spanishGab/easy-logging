{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "src/",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "/**/*.test.ts"]
}
